{% extends 'MTFIAppBundle:MasterTwigs:portal_master_fyfi.html.twig' %}
{% block styleInBundleMasterPages %}
    {{ parent() }}
    <style type="text/css">
        .header{
            border-bottom: 1px solid gray;
            {#            min-height: 65px;#}
            height: 75px;
            {#            background: url({{ asset('bundles/portal/images/background1.jpg')}}) repeat scroll 0 0 ;#}
            background: #315070 ;
        }
        .home-menu > a{
            padding: 0 2px !important;
            padding-bottom: 6px !important;
        }
        .home-icon > a{
            padding-top: 5px !important;
            padding-bottom: 0px !important;
        }
        .home-menu > a {
            padding: 8px 14px 6px !important;
        }
        .dropdown-menu{
            padding-left: 0px !important;
            padding-right: 0px !important;
            width: 265% !important;
            {#            width: 215% !important;#}
        }
        .dropdown-menu2{
            padding-left: 0px !important;
            padding-right: 0px !important;
            width: 135% !important;
            {#            width: 215% !important;#}
        }
        .captcha{
            width: 40% !important;
            float: left;
            margin-top: 10px;
            margin-right: 5px;
        }
        .logout{
            margin-right: 15px !important;
        }
        .header-menu{
            background-color: #484848;
            text-decoration: none;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
            color: #eee;
            font: 15px Arial,sans-serif;
            margin: 0;
            height: 45px;
            padding: 0 36px 0 0;
            width: 100%;
            z-index: 99999;
        }
        .header-menu a{
            text-decoration: none;
            padding-bottom: 9px !important;   
        }
        .header-fyfi{
            background: #fff url({{ asset('bundles/mtfiapp/images/headerFYFI.jpg')}}) no-repeat scroll left bottom;
            height: 75px;
            margin: 0;
            padding: 0;
            width: 100%;
            {#            background-size: 100%;#}
        }

        .dropdown-submenu {
            position: relative;
        }

        .dropdown-submenu>.dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -6px;
            margin-left: -1px;
            -webkit-border-radius: 0 6px 6px 6px;
            -moz-border-radius: 0 6px 6px;
            border-radius: 0 6px 6px 6px;
        }
        .dropdown-submenu:hover>.dropdown-menu {
            display: block;
        }
        .dropdown-submenu>a:after {
            display: block;
            content: " ";
            float: right;
            width: 0;
            height: 0;
            border-color: transparent;
            border-style: solid;
            border-width: 5px 0 5px 5px;
            border-left-color: #ccc;
            margin-top: 5px;
            margin-right: -10px;
        }
        .dropdown-submenu:hover>a:after {
            border-left-color: #fff;
        }

        .dropdown-submenu.pull-left {
            float: none;
        }

        .dropdown-submenu.pull-left>.dropdown-menu {
            left: -100%;
            margin-left: 10px;
            -webkit-border-radius: 6px 0 6px 6px;
            -moz-border-radius: 6px 0 6px 6px;
            border-radius: 6px 0 6px 6px;
        }
        .divider{
            margin: 0 !important;
        }

        .navbar-collapse a{
            color:white !important;
        }

        .nav > li > a:hover, .nav > li > a:focus {
            color: black !important;
        }
        .menu_level_2 a{
            color: black !important;
            padding-left: 5px !important;
            padding-right: 5px !important;

        }
        .menu_level_1 a{
            color: black !important;
            padding-left: 10px !important;
            padding-right: 5px !important;
        }
        .menu_level_2{
            width: 125% !important   
        }
        .nav > li > a:hover, .nav > li > a:focus {
            background-color: transparent !important;
            text-decoration: none !important;
        }
        .nav .open > a, .nav .open > a:hover, .nav .open > a:focus {
            background-color: transparent !important;
            border-color: transparent !important;
            color: black !important;
        }

    </style>
{% endblock %}
{% block bundle_master_content %}
    <div class="header" style="background:#315070; border-bottom: 77px solid black">
        <div class="header-fyfi">
            <div class="col-md-12">
                <div class="col-md-7 no-padding">
                    <div class="col-md-12 no-padding">
                        <div class="col-md-2 no-padding pull-left">
                            <img class="pull-left" src="{{ asset('bundles/mtfiapp/images/gok51.png')}}" height=75 width=92/>
                        </div>
                        <div class="col-md-10 no-padding pull-right">
                            <b style="font-size:20px; color:black; font-family: ShouldveKnownShaded-Regular">MEDIUM TERM FISCAL IMPACT ANALYSIS</b><br>
                            <small style="color:black; font-family: ShouldveKnownShaded-Regular">
                                <b>Finance Department</b><br>
                                Govt. of Kerala, India
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 no-padding">
                    <div class="col-md-12 no-padding" style="height:20px"></div>
                    <div class="col-md-12 no-padding">
                        <div class="menu-in-header pull-right">
                            {{ knp_menu_render('MTFIAppBundle:MenuBuilder:mainMenu', {'compressed': true, 'currentClass': 'active', 'template': 'MTFIAppBundle:MasterTwigs:knp_menu.html.twig'}) }}
                            <div class="navbar-right">
                                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                    <ul class="nav navbar-nav">
                                        <li class="dropdown  user user-menu">
                                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                                <i class="fa fa-user text-primary"></i>
                                                <span id="UserName"><i>{{app.user.username}}</i>
                                                    <i class="caret"></i>
                                                </span>
                                            </a>
                                            <ul class="menu_level_1 dropdown-menu dropdown-menu2" >
                                                <li><a href="{#{{path('view_user_details',{'userId': app.user.id})}}#}" id="LoggedUserName" >User: <i>{{app.user.username}}</i></a> <li>
                                                <li><a href="{#{{path('user_change_password',{'userId': app.user.id})}}#}" id="changePassword">
                                                        Change password
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                {% endif %}
                                <ul class="nav navbar-nav">
                                    <li class="dropdown  user user-menu">
                                        <a href="{{ path('_logout') }}"  title="logout">
                                            <i class="fa fa-sign-out  text-danger"></i>
                                            Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 path-indicator" style="margin-bottom: 10px; margin-top:10px;text-align:center">
        {% block pathindicator %}
        {% endblock %}
    </div>
    <div class="container main-container" style="margin-top: 20px; width:100%">
        {% block mastercontent %} 
        {% endblock %}
    </div> 
{% endblock %} 
{% block jsInBundleMasterPages %} 
    {{ parent() }}
    {% block jsInPages %} 
    {% endblock %} 
{% endblock %}
