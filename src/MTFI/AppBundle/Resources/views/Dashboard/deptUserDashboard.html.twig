    <script type="text/javascript">
        $(document).ready(function () {
            {#$.ajax({
                type: "POST",
                url: "{{path('quick_scheme_details')}}",
                beforeSend: function () {
                },
                success: function ($data) {
                    $("#totScheme").text($data.totScheme);
