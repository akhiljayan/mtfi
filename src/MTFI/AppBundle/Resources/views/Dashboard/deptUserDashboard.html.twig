                    },
                    success: function ($data) {
                        $("#show-scheme-body").html($data);
                        $("#show-scheme-model").modal("show");
                    },
                    complete: function () {
                    }
                });
            });

            $(".add-component-to-divisions").click(function () {
                var divisionId = null;
                var typeId = null;
                var $path = "{{ path("add_new_multiple_components_while_adding_group",{'divisionId':'__divisionId__','typeId':'__typeId__'}) }}";
                $path = $path.replace('__divisionId__', divisionId);
                $path = $path.replace('__typeId__', typeId);
                $.ajax({
                    type: "POST",
                    url: $path,
                    context: this,
                    beforeSend: function () {
                    },
                    success: function ($data) {

                        $("#add-edit-wrk-components").html($data);
                        $("#add-edit-wrk-components-modal").modal("show");
                    },
                    complete: function () {
                        $(this).next(".loading-img").remove();
                    }
                });
            });#}
        });
